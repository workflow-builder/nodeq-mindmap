modules = ["nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]

[[workflows.workflow]]
name = "Start Pipeline Demo"
author = 42047309
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd examples && python3 -m http.server 8000"

[[workflows.workflow]]
name = "Build CLI"
author = 42047309
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x dist/cli.js"
